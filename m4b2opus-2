indent() {
  local n="$1"
  local pad="$(printf '%*s' "$n")"
  fold -s -w $((COLUMNS - n)) | sed "s/^/$pad/"
}

indent() {
  local pad="${1:-4}"
  local spaces="$(printf '%*s' "$pad")"
  while IFS= read -r line; do
    printf '%s%s\n' "$spaces" "$line"
  done
}

