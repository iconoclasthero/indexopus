  printf '%sChecking output from mediainfo...\n\n%s' "$relipsis" "$tput0"
  mediainfo "$output"
  outdur="$(mediainfo -f "$output"|grep Duration|head -n1)"
  outdur="${outdur#*: }"
  outdur="$(echo "$outdur" | perl -nle '/([0-9\.]+)/ && ($t += $1) && printf "%02d:%02d:%02d\n", $t/3600000, ($t/60000)%60, ($t/1000)%60')"

