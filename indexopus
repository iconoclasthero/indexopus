# Parse command-line options
while [[ "$#" -gt 0 ]]; do
  if [[ "$1" = @(e|edit|--edit) ]]; then
     editscript;
  elif [[ "$1" = @(-y|--force) ]]; then
     rmmatch=true
  elif [[ "$1" = -f ]]; then
     fd="$2"; shift
  elif [[ "$1" = @(-d) ]]; then
     opuspartdur="$2"; shift
  elif [[ "$1" = @(-q|--quiet) ]]; then
     quiet=true; shift
  elif [[ "$1" = @(-t|--title) ]]; then
     title="$2"; shift
  elif [[ "$1" = @(-s|--stamp) ]]; then
     stamp="$2"; shift
  elif [[ "$1" = @(-m|--tmp) ]]; then
     tmp="$2"; shift
  elif [[ "$1" = @(c|config|--config) ]]; then
     if [[ -n "$2" && -f "$2" && $(grep -q "absserver" "$2") ]]; then
       config="$2"
       shift
     else
#      if [[ -f "$confpath" && $(grep -q "absserver" "$confpath") ]]; then
#         config="$confpath"
#      fi
       echo "Default config file location: $confpath"
     fi
  elif [[ "$1" = @(-r|--reindex|reindex) ]]; then
    reindex=true
  elif [[ "$1" = @(-h|help|--help) ]]; then
    usage
  else
    echo "Unknown option: $1"
    exit 1
  fi
  shift
done

if [[ ! -d "$tmp" ]]; then
